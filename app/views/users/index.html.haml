%ul
  - flash.keys.each do |key|
    %li= flash[key]
%h1 Search Results
- if @result
  %table
    %tr
      = content_tag :th,sort_link(@q, :name, "Name")
      = content_tag :th,sort_link(@q, :email, "Email")
      = content_tag :th,sort_link(@q, :user_name, "User Name")
      = content_tag :th,sort_link(@q, :name, "Name")
      %th
      %th
    - @result.each do |user|
      %tr
        %td= user.name
        %td= user.user_name
        %td= user.email
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
%br      
%h1 Listing users
%table
  %tr
    %th name
    %th username
    %th email
    %th profile picture
    %th
    %th
  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.user_name
      %td= user.email
      %td= link_to image_tag(user.profile_picture.thumb.url), user.profile_picture.detail.url      
      %td= link_to 'Show', user
      %td= link_to 'Edit', edit_user_path(user)
%br

