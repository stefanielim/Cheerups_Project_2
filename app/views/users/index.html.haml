%ul
  - flash.keys.each do |key|
    %li= flash[key]
%h1 Search Results

%h1 Listing users
%table
  %tr
    %th name
    %th username
    %th email
    %th profile picture
    %th
    %th
  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.user_name
      %td= user.email
      %td= link_to image_tag(user.profile_picture.thumb.url), user.profile_picture.detail.url      
      %td= link_to 'Show', user
      %td= link_to 'Edit', edit_user_path(user)
%br

