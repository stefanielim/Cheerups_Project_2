!!! 5
%html
  %head
    %title CheerupsApp
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header
      %nav
        = link_to "Users", users_path
        = link_to "Cheerups", cheerups_path
        = search_form_for @q do |f|
          %p
            = f.search_field :name_or_email_or_user_name_or_cheerups_content_cont
            = f.submit
                
    - if user_signed_in?
      Welcome #{current_user.name} #{link_to "Log out", destroy_user_session_path, method: :delete}
      %form#test_data{:action => "/users/create_test_users_data", :method => "post"}
        %button{:name => "test"} Create Test Data
    - else
      = link_to "Sign In", new_user_session_path
      = link_to "Register", new_user_registration_path
      %p.notice= notice
      %p.alert= alert
    = yield
